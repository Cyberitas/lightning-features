<?php
/**
 * @file
 * Code for the assemble_blocks feature.
 */

include_once 'assemble_blocks.features.inc';

/**
 *  Implements hook_post_features_enable_feature().
 */
function assemble_blocks_post_features_enable_feature($component) {
  // Log components as they are enabled.
  watchdog('component', 'assemble_blocks enabled ' . $component . ' component');
}

/**
 * Implements hook_entity_info_alter().
 */
function assemble_blocks_entity_info_alter(&$entity_info) {

  // Alternate Preview view mode for files.
  $entity_info['file']['view modes']['alt_preview'] = array(
    'label' => t('Alternate Preview'),
    'custom settings' => TRUE,
  );

}

